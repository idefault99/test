FROM nexus.sogaz.ru/library/gradle:7.6.4-jdk17 AS build
WORKDIR /src
COPY . .
RUN gradle :communication-adapter:bootJar -x test --no-daemon

FROM nexus.sogaz.ru/library/eclipse-temurin:17-jre
WORKDIR /app
COPY --from=build /src/communication-adapter/build/libs/*.jar /app/app.jar
EXPOSE 8080
ENTRYPOINT ["java","-jar","/app/app.jar"]
